{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "redirectOutput": true,
            "justMyCode": false,
            "env": {
                "PYTEST_ADDOPTS": "-n 1 --no-cov"
            },
            "pythonArgs": [
                "-X frozen_modules=off"
            ],
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "Debug Module",
            "type": "python",
            "request": "launch",
            "purpose": [
                "debug-in-terminal"
            ],
            "module": "lbsolve",
            "args": [
                "--letter_groups", "ALO", "EMS", "CID", "FKV"
            ],
            "justMyCode": true
        }
    ]
}